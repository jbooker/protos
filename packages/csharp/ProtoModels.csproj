<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <PackageId>ProtoModels</PackageId>
    <PackageVersion>1.2.0</PackageVersion>
    <Authors>Your Name</Authors>
    <Company>Your Company</Company>
    <Description>Generated protobuf models for trading and financial data</Description>
    <PackageTags>protobuf;trading;finance;models</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/yourusername/protos</RepositoryUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.25.1" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="../../generated/csharp/*.cs" />
  </ItemGroup>

</Project>
